error_color = #a94442
litle_text = 12px
success_btn = #5cb85c
success_color = #dff0d8
warning_color = #fcf8e3

@font-face {
	font-family: 'icons';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
	font-size 16px
.btn
	display: inline-block;
	padding: 6px 12px;
	margin-bottom: 0;
	font-size: 14px;
	font-weight: normal;
	line-height: 1.42857143;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	cursor: pointer;
	border: 1px solid transparent;
	border-radius: 4px;

.form-container
	margin 0 auto
	
	.form
		padding 20px
		
		.has-error
			.form-control
				border-color error_color
				-webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, .075);
				box-shadow inset 0 1px 1px rgba(0, 0, 0, .075);
				background-color #F5D0D0
				
			.group-radio
				label
					color error_color
			
		.error-msg
			color error_color
			margin 6px 0;
			display none
			&:before
				content "\e601"
				display inline-block
				font-family "icons"
				margin 0 8px 0 0
	
		.row
			margin 20px 0 0
			&.submit-btn
				@extend .text-center

			.add-icon
				background #eee
				padding 8px 6px
				border-radius 6px
				display inline-block
				vertical-align bottom
				cursor pointer
				float right
				&:before
					content "\e603"
					display inline-block
					font-family "icons"
		
			label	
				.litle-text
					@extends .litle-text
						margin-top 8px
						display block
		
				.title-label
					display block
					margin 0 10px 6px 0
					font-weight bold
			
			.form-control
				width 100%
				display block
				height 34px
				padding: 6px 12px;
				box-sizing border-box
				font-size: 14px;
				line-height: 1.42857143;
				color: #555;
				background-color: #fff;
				border: 1px solid #ccc;
				border-radius: 4px;
				-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
				box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
				-webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
				-o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
				transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
			
			.group-radio
				input
					margin 0 8px 0 0
				label
					margin 0 15px 0 0
					font-size 12px
				
			.sign-up
				@extend .btn
				border-color #4cae4c
				background-color success_btn
				color #FFF
				font-weight bold
				width 100%
				max-width 360px
			
			textarea
				width 100%
			.row-select-container
				display inline
				width auto
				margin-bottom 1em
				.row-select
					width 26%
					display inline-block
					margin-right 2%
		
		.status-app
			width 90%
			padding 6px
			display none
			margin 0 0 25px
			border-radius 6px
			&.warning
				background-color warning_color
				border 1px solid #8a6d3b
				color #8a6d3b
				
				.another-form
					color #8a6d3b
					
			&.success
				background-color success_color
				border 1px solid #3c763d
				color #3c763d
				
				.another-form
					color #3c763d	
			
			.message
				text-align center
.litle-text
	font-size litle_text

.text-center
	text-align center
	
.text-left
	text-align left
	
		
@media (min-width: 615px)
	.form-container
		.form
			.status-app success
				width 96%
			.row
				width 44%
				display inline-block
				vertical-align top
				margin-right 2em
				&.submit-btn
					@extend .text-left
				
		

				
		



			